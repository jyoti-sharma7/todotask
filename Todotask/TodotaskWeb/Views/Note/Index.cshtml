@model List<Note>
@{
    ViewData["Title"] = "Notes List";
}
<div class="row">
    <div class="col-8 mx-auto">
        <h2 class="mt-2"><i class="bi bi-list-check"></i>Task List</h2>
    </div>
    <div class="col-4">
        <a class="mt-2 btn btn-primary float-end" asp-action="Create"><i class="bi bi-file-plus"></i>Create To-do List</a>
    </div>
</div>
<ol class="list-group list-group-numbered">
    @foreach (var note in Model.OrderByDescending(x=>x.CreatedDate))
    {
        <div class="p-3 text-white rounded-2 m-2" style="background-color:@note.Color">
            <div class="row">
             <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="col-10 ms-2 me-auto">
                <div class="fw-bold">@note.Title</div>
                    @note.Description
             </div>
            <div class="col-2">
                <a class="float-end btn btn-danger" asp-action="Delete" asp-route-id="@note.Id"><i class="bi bi-trash"></i></a>
            <a class="float-end btn btn-primary" asp-action="Edit" asp-route-id="@note.Id"><i class="bi bi-pencil-square"></i></a>
            </div>
        </li>
        </div>

        </div>
    }
</ol>
